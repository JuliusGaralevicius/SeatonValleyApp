<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seatonvalleyccapp.ContactFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_contact_callUsTitle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="CALL US"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_contact_callUsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:linksClickable="true"
            android:autoLink="phone"
            android:text="0191 237 9870"
            android:textColorLink="@color/colorDarkGrey" />


        <TextView
            android:id="@+id/tv_contact_addressTitle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:text="ADDRESS"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_contact_addressText"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:text="20-22 Astley Road Seaton Delaval Northumberland NE25 0DG"
            android:textColor="@color/colorDarkGrey" />

        <TextView
            android:id="@+id/tv_contact_emailTitle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="EMAIL"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_contact_emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:linksClickable="true"
            android:autoLink="email"
            android:text="clerk@seatonvalleycommunitycouncil.gov.uk"
            android:textColorLink="@color/colorDarkGrey"/>

        <TextView
            android:id="@+id/tv_contact_openingTimesTitle"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:text="OPENING TIMES"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_contact_openingTimesText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:text="Monday - Thursday
8.30am – 4.30pm

Friday
8.30am – 4.00pm"
            android:textColor="@color/colorDarkGrey" />



    </LinearLayout>

</FrameLayout>
